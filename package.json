{
  "name": "faucet",
  "version": "1.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rimraf build/",
    "build:js": "babel src/ --extensions '.ts' --out-dir build",
    "watch:bot": "nodemon -- src/bot/index.ts",
    "watch:server": "nodemon -- src/server/index.ts",
    "typing": "tsc --noEmit",
    "dev": "run-p watch:*",
    "lint": "eslint ./src/ --ext .js,.ts",
    "lint:fix": "eslint ./src/ --ext .js,.ts --fix",
    "format": "prettier ./src --check",
    "format:fix": "prettier ./src --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "dependencies": {
    "@polkadot/api": "^6.0.5",
    "@polkadot/keyring": "^7.4.1",
    "@polkadot/util": "^7.4.1",
    "@polkadot/util-crypto": "^7.4.1",
    "@polkadot/wasm-crypto": "^4.2.1",
    "@polkadot/x-randomvalues": "^7.4.1",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "bs58": "^4.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "matrix-js-sdk": "^12.4.1",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/matrix-js-sdk": "^11.0.1",
    "@types/nedb": "^1.8.11",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "lint-staged": "^11.2.0",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.6.1",
    "ts-node": "^10.3.0",
    "typescript": "^4.1.3"
  }
